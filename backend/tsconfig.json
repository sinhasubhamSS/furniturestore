{
  "compilerOptions": {
    "target": "ES2020",
     "module": "CommonJS",                      // ✅ important
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,                // ✅ important
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  
  },
  "include": ["src"],
  "exclude": ["dist"]
}
