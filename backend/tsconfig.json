{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
   
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // "types": ["node"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "scripts/**/*" // âœ… This will now work
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
